generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rol {
  idRol  Int     @id @default(autoincrement())
  nombre String
  estado Boolean @default(true)

  usuarios Usuario[]
}

model Usuario {
  idUsuario  Int      @id @default(autoincrement())
  rolId      Int
  nombre     String
  apellido   String?
  email      String   @unique
  dni        String   @unique
  contrasena String
  telefono   String?
  estado     Boolean  @default(true)
  created_at DateTime @default(now())

  rol         Rol         @relation(fields: [rolId], references: [idRol])
  ventas      Venta[]
  direcciones Direccion[]
}

model Direccion {
  idDireccion  Int     @id @default(autoincrement())
  usuarioId    Int
  direccion    String
  ciudad       String
  estado       String?
  pais         String
  codigoPostal String?

  usuario Usuario @relation(fields: [usuarioId], references: [idUsuario])
  ventas  Venta[]
}

model Categoria {
  idCategoria Int     @id @default(autoincrement())
  nombre      String
  estado      Boolean @default(true)

  subcategorias Subcategoria[]
}

model Subcategoria {
  idSubcategoria Int     @id @default(autoincrement())
  nombre         String
  estado         Boolean @default(true)

  categoriaId Int
  categoria   Categoria @relation(fields: [categoriaId], references: [idCategoria])

  subsubcategorias SubSubcategoria[]
}

model SubSubcategoria {
  idSubSubcategoria Int     @id @default(autoincrement())
  nombre            String
  estado            Boolean @default(true)

  subcategoriaId Int
  subcategoria   Subcategoria @relation(fields: [subcategoriaId], references: [idSubcategoria])

  articulos Articulo[]
}

model Color {
  idColor   Int     @id @default(autoincrement())
  nombre    String
  codigoHex String?
  estado    Boolean @default(true)

  variantes Variante[]
}

model Marca {
  idMarca Int     @id @default(autoincrement())
  nombre  String
  estado  Boolean @default(true)

  articulos Articulo[]
}

model Genero {
  idGenero Int     @id @default(autoincrement())
  nombre   String
  estado   Boolean @default(true)

  articulos Articulo[]
}

model Articulo {
  idArticulo  Int     @id @default(autoincrement())
  marcaId     Int
  generoId    Int?
  codigo      String  @unique
  nombre      String
  slug        String? @unique
  precioVenta Decimal @db.Decimal(10, 2)
  imagen      String?
  estado      Boolean @default(true)

  marca  Marca   @relation(fields: [marcaId], references: [idMarca])
  genero Genero? @relation(fields: [generoId], references: [idGenero])

  variantes         Variante[]
  SubSubcategoria   SubSubcategoria @relation(fields: [subSubcategoriaId], references: [idSubSubcategoria])
  subSubcategoriaId Int
}

model Variante {
  idVariante Int  @id @default(autoincrement())
  articuloId Int
  colorId    Int?
  tallaId    Int?
  stock      Int  @default(0)

  articulo       Articulo         @relation(fields: [articuloId], references: [idArticulo])
  color          Color?           @relation(fields: [colorId], references: [idColor])
  talla          Talla?           @relation(fields: [tallaId], references: [idTalla])
  detalles       DetalleVenta[]
  DetalleIngreso DetalleIngreso[]
}

model Talla {
  idTalla   Int        @id @default(autoincrement())
  nombre    String     @unique
  tipo      String
  estado    Boolean    @default(true)
  variantes Variante[]
}

model Proveedor {
  idProveedor Int       @id @default(autoincrement())
  nombre      String
  ruc         String?   @unique
  direccion   String?
  telefono    String?
  ingresos    Ingreso[]
}

model Ingreso {
  idIngreso   Int              @id @default(autoincrement())
  fecha       DateTime         @default(now())
  proveedorId Int
  proveedor   Proveedor        @relation(fields: [proveedorId], references: [idProveedor])
  detalles    DetalleIngreso[]
}

model DetalleIngreso {
  idDetalle  Int      @id @default(autoincrement())
  cantidad   Int
  varianteId Int
  ingresoId  Int
  variante   Variante @relation(fields: [varianteId], references: [idVariante])
  ingreso    Ingreso  @relation(fields: [ingresoId], references: [idIngreso])
}

model Venta {
  idVenta     Int      @id @default(autoincrement())
  usuarioId   Int
  direccionId Int
  fecha       DateTime @default(now())
  total       Decimal  @db.Decimal(11, 2)
  estado      String // pendiente, pagado, enviado, entregado, cancelado

  usuario   Usuario        @relation(fields: [usuarioId], references: [idUsuario])
  direccion Direccion      @relation(fields: [direccionId], references: [idDireccion])
  detalles  DetalleVenta[]
  pagos     Pago[]
}

model DetalleVenta {
  idDetalleVenta Int     @id @default(autoincrement())
  ventaId        Int
  varianteId     Int
  cantidad       Int
  precio         Decimal @db.Decimal(11, 2)
  descuento      Decimal @db.Decimal(11, 2)

  venta    Venta    @relation(fields: [ventaId], references: [idVenta])
  variante Variante @relation(fields: [varianteId], references: [idVariante])
}

model Pago {
  idPago  Int      @id @default(autoincrement())
  ventaId Int
  metodo  String // tarjeta, PayPal, transferencia, contraentrega
  monto   Decimal  @db.Decimal(11, 2)
  estado  String // pendiente, completado, fallido
  fecha   DateTime @default(now())

  venta Venta @relation(fields: [ventaId], references: [idVenta])
}
